{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run with input/output files",
            "type": "shell",
            "command": "python3",
            "args": [
                "${relativeFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell",
                    "args": [
                        "-Command",
                        "& { Get-Content input.txt | python3 ${relativeFile} | Set-Content output.txt }"
                    ]
                }
            },
            "presentation": {
                "reveal": "never",  // Prevents the terminal from opening
                "panel": "shared"    // Keeps the terminal in the background
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
